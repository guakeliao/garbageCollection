{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
